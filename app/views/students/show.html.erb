<p style="color: green"><%= notice %></p>

<%= render @student %>

<div class="text-start mt-3">
  <%= link_to "Edit this student", edit_student_path(@student), class: "btn btn-warning me-2" %>
  <%= link_to "Back to students", students_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Destroy this student", @student, method: :delete, class: "btn btn-danger" %>
</div>
